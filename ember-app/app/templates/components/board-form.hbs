<form id="boardform">
  
  <ol>
    <li>Plug in your Arduino</li>
    <li>
      {{simple-select
      content=boards 
      optionLabelPath="human" 
      optionValuePath="machine" 
      action="boardChange" 
      prompt="Which board is it?"}}
    </li>
    <li>
      <button {{action "startTest"}} class="{{buttonClass}}">{{buttonText}}</button>
    </li>
  </ol>
</form>
